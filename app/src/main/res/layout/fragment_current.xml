<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_1"
        tools:context=".fragments.CurrentFragment">

    <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/locationAddress"
            app:layout_constraintTop_toTopOf="@+id/locationAddress" />

    <TextView
            android:id="@+id/locationAddress"
            style="@style/Text"
            android:layout_marginTop="@dimen/margin_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/london_center" />

    <ImageView
            android:id="@+id/degree"
            style="@style/Text"
            android:layout_marginTop="@dimen/margin_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.638"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationAddress"
            app:srcCompat="@drawable/degree" />

    <TextView
            android:id="@+id/temp"
            style="@style/Text"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationAddress"
            tools:text="@string/_25" />

    <TextView
            android:id="@+id/summary"
            style="@style/Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temp"
            tools:text="@string/sunny_clear_weather" />

    <TextView
            android:id="@+id/time"
            style="@style/Text"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_3"
            android:text="@string/at_7_30_pm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summary" />

    <TextView
            android:id="@+id/lastUpdated"
            style="@style/Text"
            android:layout_marginRight="@dimen/margin_3"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/lastUpdated" />

    <View
            android:id="@+id/view"
            style="@style/Divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time" />
</androidx.constraintlayout.widget.ConstraintLayout>